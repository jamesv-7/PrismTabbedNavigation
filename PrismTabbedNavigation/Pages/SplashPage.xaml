<?xml version="1.0" encoding="utf-8" ?>
<prismmaui:BasePage  xmlns:prismmaui="clr-namespace:PrismTabbedNavigation.Pages" 
                     xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrismTabbedNavigation.Pages.SplashPage"
             Title="SplashPage">
    <prismmaui:BasePage.Content>
        <VerticalStackLayout>
            <Label 
                Text="Welcome to .NET MAUI!"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <Image x:Name="SplashImage"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>
            <Button Text="Navigate" x:Name="Button1"></Button>
        </VerticalStackLayout>
    </prismmaui:BasePage.Content>
</prismmaui:BasePage>
